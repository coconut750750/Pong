<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.brandon.pong.BluetoothFragment"
    android:background="#ffffff">

    <ListView
        android:id="@+id/list_discovered"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/button_listen"
        />

    <Button
        android:id="@+id/button_search"
        android:text="Search for Game"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button_listen"
        android:text="Host a Game"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_search"
        android:layout_alignParentStart="true" />

</RelativeLayout>
